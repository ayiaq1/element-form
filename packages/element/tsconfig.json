{
  "extends": "./node_modules/@umijs/fabric/dist/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./lib"
  },
  "include": ["src/**/*", "typings.ts", "tests/**/*", "__test__/**/*", "example/**/*"],
  "exclude": ["node_modules", "dist", "lib"]
}
